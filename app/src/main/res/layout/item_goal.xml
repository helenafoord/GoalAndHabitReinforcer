<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_itemLoan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_Goal"
        android:layout_width="269dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Drink Water" />

    <TextView
        android:id="@+id/textView_positiveHabit"
        android:layout_width="313dp"
        android:layout_height="28dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Goal"
        app:layout_constraintVertical_bias="0.0"
        tools:text="NO" />

    <Button
        android:id="@+id/button_addProgress"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_Goal"
        app:layout_constraintTop_toTopOf="@+id/textView_Goal"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="TouchTargetSizeCheck"
        tools:text="+" />

    <TextView
        android:id="@+id/textView_goalNeeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toEndOf="@+id/textView_positiveHabit"
        app:layout_constraintTop_toBottomOf="@+id/button_addProgress"
        app:layout_constraintVertical_bias="0.0"
        tools:text="/10" />

    <TextView
        android:id="@+id/textView_goalDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_addProgress"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toEndOf="@+id/textView_Goal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536"
        tools:text="4" />

</androidx.constraintlayout.widget.ConstraintLayout>
